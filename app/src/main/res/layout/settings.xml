<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="50dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/settings_layout"
                  android:orientation="vertical"
                  android:layout_width="50dp"
                  android:layout_height="30dp">
    </LinearLayout>

        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="141dp"
                android:text="@string/settings_seite_text"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        <CheckBox
                android:text="Alle anzeigen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cbAlleFertigkeitenAnzeigen"/>
        <EditText
            android:id="@+id/DateiName"
            android:text="Dateipfad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"/>
    <Button
            android:text="Datei auswählen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BtnLoadDat"/>
    <Button
            android:text="Datei auswählen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BtnLoadDatTest"/>


</LinearLayout>

